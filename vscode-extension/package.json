{
  "name": "ax-cli-vscode",
  "displayName": "AX CLI",
  "description": "AI-powered coding assistant with multi-provider flexibility",
  "version": "0.4.0",
  "publisher": "defai-digital",
  "icon": "resources/icon.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning",
    "Other"
  ],
  "keywords": [
    "ai",
    "assistant",
    "code-generation",
    "refactoring",
    "grok",
    "glm",
    "claude",
    "gpt-4",
    "ollama"
  ],
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:**/.ax-cli/**",
    "onCommand:ax-cli.openChat"
  ],
  "type": "module",
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ax-cli.openChat",
        "title": "AX: Open Chat",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "ax-cli.analyzeFile",
        "title": "AX: Analyze Current File"
      },
      {
        "command": "ax-cli.explainSelection",
        "title": "AX: Explain Selection"
      },
      {
        "command": "ax-cli.generateTests",
        "title": "AX: Generate Tests"
      },
      {
        "command": "ax-cli.refactorSelection",
        "title": "AX: Refactor Selection"
      },
      {
        "command": "ax-cli.documentCode",
        "title": "AX: Document Code"
      },
      {
        "command": "ax-cli.findBugs",
        "title": "AX: Find Bugs"
      },
      {
        "command": "ax-cli.reviewChanges",
        "title": "AX: Review Git Changes"
      },
      {
        "command": "ax-cli.selectModel",
        "title": "AX: Select Model"
      },
      {
        "command": "ax-cli.configure",
        "title": "AX: Configure Settings"
      },
      {
        "command": "ax-cli.setApiKey",
        "title": "AX: Set API Key"
      },
      {
        "command": "ax-cli.clearApiKey",
        "title": "AX: Clear API Key"
      },
      {
        "command": "ax-cli.showApiKeyStatus",
        "title": "AX: Show API Key Status"
      },
      {
        "command": "ax-cli.insertFilePath",
        "title": "AX: Insert File Reference"
      },
      {
        "command": "ax-cli.attachImage",
        "title": "AX: Attach Image to Chat"
      },
      {
        "command": "ax-cli.rewind",
        "title": "AX: Rewind to Checkpoint"
      },
      {
        "command": "ax-cli.createCheckpoint",
        "title": "AX: Create Checkpoint"
      },
      {
        "command": "ax-cli.autoFixErrors",
        "title": "AX: Auto-Fix Errors"
      },
      {
        "command": "ax-cli.newSession",
        "title": "AX: New Chat Session"
      },
      {
        "command": "ax-cli.switchSession",
        "title": "AX: Switch Session"
      },
      {
        "command": "ax-cli.manageSessions",
        "title": "AX: Manage Sessions"
      },
      {
        "command": "ax-cli.manageHooks",
        "title": "AX: Manage Hooks"
      },
      {
        "command": "ax-cli.createHooksConfig",
        "title": "AX: Create Hooks Config"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ax-cli",
          "title": "AX CLI",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "ax-cli": [
        {
          "type": "webview",
          "id": "ax-cli.chatView",
          "name": "Chat"
        }
      ]
    },
    "keybindings": [
      {
        "command": "ax-cli.openChat",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a"
      },
      {
        "command": "ax-cli.explainSelection",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e",
        "when": "editorHasSelection"
      },
      {
        "command": "ax-cli.refactorSelection",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "editorHasSelection"
      },
      {
        "command": "ax-cli.generateTests",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "editorFocus"
      },
      {
        "command": "ax-cli.findBugs",
        "key": "ctrl+shift+b",
        "mac": "cmd+shift+b",
        "when": "editorFocus"
      },
      {
        "command": "ax-cli.setApiKey",
        "key": "ctrl+shift+k",
        "mac": "cmd+shift+k"
      },
      {
        "command": "ax-cli.insertFilePath",
        "key": "alt+ctrl+k",
        "mac": "cmd+alt+k"
      },
      {
        "command": "ax-cli.attachImage",
        "key": "alt+ctrl+i",
        "mac": "cmd+alt+i"
      }
    ],
    "configuration": {
      "title": "AX CLI",
      "properties": {
        "ax-cli.provider": {
          "type": "string",
          "default": "grok",
          "enum": [
            "grok",
            "glm",
            "openai",
            "anthropic",
            "deepseek"
          ],
          "enumDescriptions": [
            "xAI Grok (api.x.ai) - Grok 3, Grok 2 models",
            "Z.AI GLM (open.z.ai) - GLM-4.6, GLM-Z1 models",
            "OpenAI (api.openai.com) - GPT-4o, o1 models",
            "Anthropic (api.anthropic.com) - Claude models",
            "DeepSeek (api.deepseek.com) - DeepSeek models"
          ],
          "description": "AI provider to use",
          "order": 1
        },
        "ax-cli.model": {
          "type": "string",
          "default": "grok-4-0709",
          "enum": [
            "grok-4-0709",
            "grok-4.1-fast",
            "glm-4.6",
            "glm-4.5-flash",
            "glm-z1-air",
            "glm-z1-airx",
            "glm-z1-flash",
            "claude-sonnet-4-20250514",
            "claude-3-5-sonnet-20241022",
            "gpt-4o",
            "gpt-4o-mini",
            "o1",
            "o1-mini",
            "deepseek-chat",
            "deepseek-reasoner"
          ],
          "enumDescriptions": [
            "Grok 4 - Most capable with vision, reasoning, search (xAI)",
            "Grok 4.1 Fast - Fast variant with agent tools (xAI)",
            "GLM-4.6 - Primary coding model (Z.AI)",
            "GLM-4.5 Flash - Fast inference (Z.AI)",
            "GLM-Z1 Air - Lightweight thinking (Z.AI)",
            "GLM-Z1 AirX - Extended thinking (Z.AI)",
            "GLM-Z1 Flash - Fast thinking (Z.AI)",
            "Claude Sonnet 4 - Latest Anthropic model",
            "Claude 3.5 Sonnet - Balanced model (Anthropic)",
            "GPT-4o - Flagship model (OpenAI)",
            "GPT-4o Mini - Fast & affordable (OpenAI)",
            "o1 - Reasoning model (OpenAI)",
            "o1 Mini - Fast reasoning (OpenAI)",
            "DeepSeek Chat - Coding model (DeepSeek)",
            "DeepSeek Reasoner - Thinking model (DeepSeek)"
          ],
          "description": "AI model to use",
          "order": 2
        },
        "ax-cli.maxToolRounds": {
          "type": "number",
          "default": 400,
          "description": "Maximum tool execution rounds",
          "order": 3
        },
        "ax-cli.autoIncludeFile": {
          "type": "boolean",
          "default": true,
          "description": "Automatically include current file as context",
          "order": 4
        },
        "ax-cli.autoIncludeDiagnostics": {
          "type": "boolean",
          "default": true,
          "description": "Automatically include error diagnostics",
          "order": 5
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && node esbuild.js --production",
    "compile:prod": "npm run package",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "package:vsix": "vsce package",
    "publish": "vsce publish",
    "clean": "rm -rf dist *.vsix"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.80.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vscode/test-electron": "^2.3.9",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.0",
    "eslint": "^8.57.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.3.0",
    "vitest": "^4.0.14"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/defai-digital/ax-cli"
  },
  "bugs": {
    "url": "https://github.com/defai-digital/ax-cli/issues"
  },
  "homepage": "https://github.com/defai-digital/ax-cli#readme",
  "license": "MIT",
  "dependencies": {
    "ws": "^8.18.3"
  },
  "bundledDependencies": [],
  "optionalDependencies": {}
}
