{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "AX: Interactive Chat",
      "type": "shell",
      "command": "ax-cli",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated"
      }
    },
    {
      "label": "AX: Analyze Current File",
      "type": "shell",
      "command": "ax-cli --prompt 'Analyze this file and suggest improvements' --file ${file} --json --vscode",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "AX: Explain Selection",
      "type": "shell",
      "command": "ax-cli --prompt 'Explain this code in detail' --selection '${selectedText}' --json --vscode",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
