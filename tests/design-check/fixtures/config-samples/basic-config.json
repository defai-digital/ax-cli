{
  "tokens": {
    "colors": {
      "primary": "#1e90ff",
      "secondary": "#ff6b6b",
      "success": "#4caf50",
      "warning": "#ff9800",
      "error": "#f44336",
      "white": "#ffffff",
      "black": "#000000",
      "gray-100": "#f5f5f5",
      "gray-500": "#9e9e9e",
      "gray-900": "#212121"
    },
    "spacing": {
      "0": "0",
      "px": "1px",
      "xs": "4px",
      "sm": "8px",
      "md": "16px",
      "lg": "24px",
      "xl": "32px",
      "2xl": "48px",
      "3xl": "64px"
    }
  },
  "rules": {
    "no-hardcoded-colors": "error",
    "no-raw-spacing": "warn",
    "no-inline-styles": "off",
    "missing-alt-text": "error",
    "missing-form-labels": "error"
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.jsx",
    "src/**/*.ts",
    "src/**/*.js"
  ],
  "ignore": [
    "**/node_modules/**",
    "**/dist/**",
    "**/*.test.*",
    "**/*.spec.*"
  ]
}
